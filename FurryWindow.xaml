<Window x:Class="Photozhop.FurryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Photozhop"
        mc:Ignorable="d"
        Title="FurryWindow" Height="650" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Source="{Binding Path=Image}"/>
        <Image Grid.Column="1" Grid.Row="0" Source="{Binding Path=FurryImage}"/>
        <Button Content="Построить Фурри образ" Grid.Column="0" Grid.Row="1"  Command="{Binding Path=MakeFurry}" Margin="10,10,10,10"/>
    </Grid>
</Window>
